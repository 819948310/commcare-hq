<h:html xmlns:h="http://www.w3.org/1999/xhtml" xmlns:orx="http://openrosa.org/jr/xforms" xmlns="http://www.w3.org/2002/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:vellum="http://commcarehq.org/xforms/vellum">
    <h:head>
        <h:title>New Form</h:title>
        <model>
            <instance>
                <data xmlns:jrm="http://dev.commcarehq.org/jr/xforms" xmlns="http://openrosa.org/formdesigner/7945B146-AD78-467B-98D0-D05D95370F1E" uiVersion="1" version="None" name="New Form">
                    <tasks/>
                    <subcase_0>
                        <case xmlns="http://commcarehq.org/case/transaction/v2" case_id="" date_modified="" user_id="">
                            <create>
                                <case_name/>
                                <owner_id/>
                                <case_type>task</case_type>
                            </create>
                            <update/>
                        </case>
                    </subcase_0>
                    <orx:meta xmlns:cc="http://commcarehq.org/xforms">
                        <orx:deviceID/>
                        <orx:timeStart/>
                        <orx:timeEnd/>
                        <orx:username/>
                        <orx:userID/>
                        <orx:instanceID/>
                        <cc:appVersion/>
                    </orx:meta>
                </data>
            </instance>
            <instance id="commcaresession" src="jr://instance/session"/>
            <bind nodeset="/data/tasks" required="true()"/>
            <itext>
                <translation lang="en" default="">
                    <text id="tasks-label">
                        <value>Select tasks for patient</value>
                    </text>
                    <text id="tasks-do_homework-label">
                        <value>Do Homework</value>
                    </text>
                    <text id="tasks-eat_food-label">
                        <value>Eat Food</value>
                    </text>
                    <text id="tasks-sleep-label">
                        <value>Sleep</value>
                    </text>
                    <text id="tasks-exercise-label">
                        <value>Exercise</value>
                    </text>
                </translation>
            </itext>
            <bind calculate="/data/meta/timeEnd" nodeset="/data/subcase_0/case/@date_modified" type="xsd:dateTime"/>
            <bind calculate="/data/meta/userID" nodeset="/data/subcase_0/case/@user_id"/>
            <setvalue event="xforms-ready" ref="/data/subcase_0/case/@case_id" value="uuid()"/>
            <bind calculate="/data/tasks" nodeset="/data/subcase_0/case/create/case_name"/>
            <bind calculate="/data/meta/userID" nodeset="/data/subcase_0/case/create/owner_id"/>
            <setvalue event="xforms-ready" ref="/data/meta/deviceID" value="instance('commcaresession')/session/context/deviceid"/>
            <setvalue event="xforms-ready" ref="/data/meta/timeStart" value="now()"/>
            <bind nodeset="/data/meta/timeStart" type="xsd:dateTime"/>
            <setvalue event="xforms-revalidate" ref="/data/meta/timeEnd" value="now()"/>
            <bind nodeset="/data/meta/timeEnd" type="xsd:dateTime"/>
            <setvalue event="xforms-ready" ref="/data/meta/username" value="instance('commcaresession')/session/context/username"/>
            <setvalue event="xforms-ready" ref="/data/meta/userID" value="instance('commcaresession')/session/context/userid"/>
            <setvalue event="xforms-ready" ref="/data/meta/instanceID" value="uuid()"/>
            <setvalue event="xforms-ready" ref="/data/meta/appVersion" value="instance('commcaresession')/session/context/appversion"/>
        </model>
    </h:head>
    <h:body>
        <select ref="/data/tasks">
            <label ref="jr:itext('tasks-label')"/>
            <item>
                <label ref="jr:itext('tasks-do_homework-label')"/>
                <value>do_homework</value>
            </item>
            <item>
                <label ref="jr:itext('tasks-eat_food-label')"/>
                <value>eat_food</value>
            </item>
            <item>
                <label ref="jr:itext('tasks-sleep-label')"/>
                <value>sleep</value>
            </item>
            <item>
                <label ref="jr:itext('tasks-exercise-label')"/>
                <value>exercise</value>
            </item>
        </select>
    </h:body>
</h:html>
